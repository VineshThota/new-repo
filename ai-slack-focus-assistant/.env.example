# AI Slack Focus Assistant Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# SLACK API CONFIGURATION
# ==============================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Slack Workspace Configuration
SLACK_WORKSPACE_ID=your-workspace-id
SLACK_TEAM_ID=your-team-id

# ==============================================
# AI/ML API CONFIGURATION
# ==============================================
# OpenAI API (optional - for enhanced summarization)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Hugging Face API (optional - for advanced NLP models)
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./slack_ai_assistant.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/slack_ai_db

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================
# STREAMLIT CONFIGURATION
# ==============================================
# Server configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Theme configuration
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
STREAMLIT_THEME_TEXT_COLOR=#262730

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
# Message classification settings
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
MAX_MESSAGE_LENGTH=1000
MIN_MESSAGE_LENGTH=3

# Thread summarization settings
SUMMARIZATION_MAX_SENTENCES=3
SUMMARIZATION_MIN_THREAD_LENGTH=2
MAX_ACTION_ITEMS=5
MAX_KEY_DECISIONS=3

# Focus time analysis settings
FOCUS_BLOCK_MIN_DURATION=30
FOCUS_BLOCK_MAX_DURATION=120
INTERRUPTION_THRESHOLD=6
PRODUCTIVITY_THRESHOLD=0.6

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Caching settings
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Batch processing
BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=5

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT settings (for API authentication)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Enable usage analytics
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com

# Error tracking (e.g., Sentry)
SENTRY_DSN=https://your-sentry-dsn-here
ENABLE_ERROR_TRACKING=false

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features
ENABLE_REAL_SLACK_INTEGRATION=false
ENABLE_ADVANCED_SUMMARIZATION=true
ENABLE_FOCUS_TIME_RECOMMENDATIONS=true
ENABLE_DAILY_DIGEST=true
ENABLE_LIVE_DEMO=true

# Experimental features
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TOPIC_MODELING=true
ENABLE_USER_PERSONALIZATION=false

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Notification settings
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_FROM_EMAIL=noreply@your-domain.com
NOTIFICATION_ADMIN_EMAIL=admin@your-domain.com

# ==============================================
# BACKUP & STORAGE
# ==============================================
# File storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.txt,.csv,.json

# Backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Development tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# Testing
TEST_DATABASE_URL=sqlite:///./test_slack_ai_assistant.db
TEST_SLACK_TOKEN=xoxb-test-token

# ==============================================
# CUSTOM CONFIGURATION
# ==============================================
# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2