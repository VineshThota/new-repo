# Slack API Configuration
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Database Configuration
DATABASE_URL=sqlite:///slack_focus.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/slack_focus

# AI Model Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
OPENAI_API_KEY=your-openai-api-key-here  # Optional, for enhanced summarization

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=3000
WORKERS=1

# Security
SECRET_KEY=your-secret-key-for-session-management
ALLOWED_HOSTS=localhost,127.0.0.1

# Focus Session Defaults
DEFAULT_FOCUS_DURATION=90  # minutes
MAX_FOCUS_DURATION=480     # 8 hours
MIN_FOCUS_DURATION=15      # 15 minutes

# AI Model Settings
PRIORITY_MODEL_THRESHOLD=0.5
URGENCY_KEYWORDS=urgent,asap,critical,emergency,blocked,down,failed,help,immediate
IMPORTANT_CHANNELS=alerts,urgent,critical,incidents,security

# Notification Settings
MAX_NOTIFICATIONS_PER_HOUR=10
QUIET_HOURS_START=22  # 10 PM
QUIET_HOURS_END=8     # 8 AM

# Performance Settings
CACHE_EXPIRY_HOURS=1
MAX_MESSAGES_PER_REQUEST=100
BATCH_SIZE=50

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true

# Development Settings (only for development)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Optional: External Services
REDIS_URL=redis://localhost:6379/0  # For caching and session storage
SENTRY_DSN=your-sentry-dsn-here     # For error tracking

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/slack/events
WEBHOOK_VERIFY_TOKEN=your-webhook-verification-token

# Feature Flags
ENABLE_THREAD_SUMMARIZATION=true
ENABLE_PRIORITY_SCORING=true
ENABLE_FOCUS_SESSIONS=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_PROCESSING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30