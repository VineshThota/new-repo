# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Slack API Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Vector Database Configuration
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=slack_messages

# Application Configuration
APP_NAME=AI Slack Knowledge Enhancer
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# AI Model Configuration
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
SIMILARITY_THRESHOLD=0.1

# Search Configuration
MAX_SEARCH_RESULTS=10
MAX_SUMMARY_LENGTH=200
MAX_MESSAGES_PER_SUMMARY=20

# Knowledge Base Configuration
KNOWLEDGE_BASE_UPDATE_FREQUENCY=daily
MAX_FAQS_DISPLAY=5
MAX_DECISIONS_DISPLAY=5
MAX_EXPERTS_PER_CHANNEL=3

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:///./slack_knowledge.db

# Redis Configuration (for caching, optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring and Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=30

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=True
ENABLE_ADVANCED_SEARCH=True
ENABLE_KNOWLEDGE_BASE=True
ENABLE_ANALYTICS_DASHBOARD=True

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Backup Configuration
ENABLE_AUTO_BACKUP=True
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups