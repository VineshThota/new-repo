# AI Slack Priority Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SLACK API CONFIGURATION
# =============================================================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_CLIENT_ID=your-client-id-here
SLACK_CLIENT_SECRET=your-client-secret-here

# Slack Workspace Configuration
SLACK_WORKSPACE_ID=your-workspace-id
SLACK_DEFAULT_CHANNEL=general

# =============================================================================
# AI/ML MODEL CONFIGURATION
# =============================================================================
# OpenAI API (Optional - for advanced NLP features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Anthropic API (Optional - alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Hugging Face (Optional - for transformer models)
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Default for development)
DATABASE_URL=sqlite:///./slack_priority.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/slack_priority

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8501
WORKERS=1

# Security
SECRET_KEY=your-secret-key-for-session-management
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# AI PRIORITIZATION SETTINGS
# =============================================================================
# Priority Thresholds
DEFAULT_PRIORITY_THRESHOLD=50
HIGH_PRIORITY_THRESHOLD=75
CRITICAL_PRIORITY_THRESHOLD=90

# Notification Settings
MAX_NOTIFICATIONS_PER_HOUR=10
QUIET_HOURS_START=22
QUIET_HOURS_END=8
NOTIFICATION_COOLDOWN_MINUTES=5

# Processing Settings
BATCH_SIZE=100
MAX_MESSAGE_AGE_DAYS=30
PROCESSING_INTERVAL_SECONDS=30

# Model Performance
MODEL_CONFIDENCE_THRESHOLD=0.7
ENABLE_LEARNING_MODE=true
AUTO_RETRAIN_THRESHOLD=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SMART_NOTIFICATIONS=true
ENABLE_THREAD_SUMMARIZATION=true
ENABLE_ACTION_ITEM_EXTRACTION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_USER_FEEDBACK=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/slack_priority.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Metrics & Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Webhook Notifications (Optional)
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
WEBHOOK_SECRET=your-webhook-secret

# Calendar Integration (Optional)
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials/google_calendar.json
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Caching
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
ENABLE_REDIS_CACHE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Async Processing
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
CONNECTION_POOL_SIZE=20

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Mode
DEV_MODE=true
AUTO_RELOAD=true
SHOW_DEBUG_INFO=true

# Testing
TEST_DATABASE_URL=sqlite:///./test_slack_priority.db
TEST_SLACK_TOKEN=xoxb-test-token
RUN_INTEGRATION_TESTS=false

# Mock Data
USE_MOCK_DATA=true
MOCK_MESSAGE_COUNT=50
MOCK_USER_COUNT=10

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Docker
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com

# Cloud Configuration
CLOUD_PROVIDER=aws
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Kubernetes
KUBERNETES_NAMESPACE=slack-priority
KUBERNETES_SERVICE_ACCOUNT=slack-priority-sa

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# API Security
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRATION_HOURS=24

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_ALGORITHM=sha256

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_FILE=certs/cert.pem
SSL_KEY_FILE=certs/key.pem

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2